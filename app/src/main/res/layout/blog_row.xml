<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardViewProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="2"
                    app:cardCornerRadius="25dp">

                    <ImageView
                        android:id="@+id/post_user_profilePicture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:hapticFeedbackEnabled="true"
                        android:soundEffectsEnabled="true"
                        app:srcCompat="@mipmap/ic_launcher" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/post_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-smallcaps"
                    android:gravity="center"
                    android:text="Title goes here"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp"
                    android:typeface="sans" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/post_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:hapticFeedbackEnabled="true"
                    android:soundEffectsEnabled="true"
                    android:text="username goes here"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/post_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:text="date"
                    android:textSize="12sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/post_image"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:adjustViewBounds="true"
                android:background="@drawable/loadingpic"
                android:cropToPadding="true"
                android:hapticFeedbackEnabled="true"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Description goes here" />

                <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignBounds"
                    android:columnCount="7"
                    android:columnOrderPreserved="true"
                    android:rowCount="2"
                    android:useDefaultMargins="true">

                    <ImageButton
                        android:id="@+id/reaction_like"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:hapticFeedbackEnabled="true"
                        android:scaleType="fitXY"
                        android:soundEffectsEnabled="true"
                        android:src="@drawable/bw_like" />

                    <ImageButton
                        android:id="@+id/reaction_lol"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:hapticFeedbackEnabled="true"
                        android:scaleType="fitXY"
                        android:soundEffectsEnabled="true"
                        android:src="@drawable/bw_lought" />

                    <ImageButton
                        android:id="@+id/reaction_love"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:hapticFeedbackEnabled="true"
                        android:scaleType="fitXY"
                        android:soundEffectsEnabled="true"
                        android:src="@drawable/bw_love" />

                    <ImageButton
                        android:id="@+id/reaction_sad"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_column="3"
                        android:layout_row="0"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:hapticFeedbackEnabled="true"
                        android:scaleType="fitXY"
                        android:soundEffectsEnabled="true"
                        android:src="@drawable/bw_sad" />

                    <ImageButton
                        android:id="@+id/reaction_shit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_column="4"
                        android:layout_row="0"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:hapticFeedbackEnabled="true"
                        android:scaleType="fitXY"
                        android:soundEffectsEnabled="true"
                        android:src="@drawable/bw_shit" />

                    <ImageButton
                        android:id="@+id/reaction_angry"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_column="5"
                        android:layout_row="0"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:hapticFeedbackEnabled="true"
                        android:scaleType="fitXY"
                        android:soundEffectsEnabled="true"
                        android:src="@drawable/bw_angry" />

                    <ImageButton
                        android:id="@+id/button_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="6"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="0"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:hapticFeedbackEnabled="true"
                        android:soundEffectsEnabled="true"
                        android:src="@drawable/ic_comment" />


                    <TextView
                        android:id="@+id/reactions_count_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-thin"
                        android:hapticFeedbackEnabled="true"
                        android:text="123"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/reactions_count_lol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-thin"
                        android:hapticFeedbackEnabled="true"
                        android:text="123"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/reactions_count_love"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-thin"
                        android:hapticFeedbackEnabled="true"
                        android:text="123"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/reactions_count_sad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-thin"
                        android:hapticFeedbackEnabled="true"
                        android:text="123"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/reactions_count_shit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="4"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-thin"
                        android:hapticFeedbackEnabled="true"
                        android:text="123"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/reactions_count_angry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="5"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-thin"
                        android:hapticFeedbackEnabled="true"
                        android:text="123"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="6"
                        android:layout_gravity="center_horizontal"
                        android:layout_row="1"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-thin"
                        android:hapticFeedbackEnabled="true"
                        android:text="0"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </GridLayout>
            </LinearLayout>

        </TableLayout>
    </FrameLayout>


</android.support.v7.widget.CardView>